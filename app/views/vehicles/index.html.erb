<h1>Listing vehicles</h1>

<%= link_to 'New vehicle', new_vehicle_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @vehicles.each do |vehicle| %>
    <tr>
      <td><%= vehicle.title %></td>
      <td><%= vehicle.text %></td>
      <td><%= link_to 'Show', vehicle_path(vehicle) %></td>
      <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
      <td><%= link_to 'Destroy', vehicle_path(vehicle),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>



